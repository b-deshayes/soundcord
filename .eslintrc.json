{
  "extends": ["eslint:recommended", "next", "prettier"],
  "rules": {
    "max-len": ["error", {"code": 120, "ignoreUrls": true}],
    "comma-dangle": ["error", "always-multiline"],
    "semi": ["error", "never"],
    "quotes": [
      "error",
      "single",
      { "avoidEscape": true, "allowTemplateLiterals": false }
    ]
  }
}
